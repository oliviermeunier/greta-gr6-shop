{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Créez votre compte {% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center mt-3">    
        <div class="col-8">
            <h2 class="mt-3">Créez votre compte</h2>
        </div>
    </div>
    <div class="row d-flex justify-content-center mt-3">
        <div class="col-4">
            <div class="avatar-container">{{ svg|raw }}</div>

            {{ form_start(generateForm, {'attr':{'class':'avatar-reload-form'}}) }}
            {{ form_widget(generateForm) }}
            <button class="btn btn-primary mt-3" type="submit"><i class="fas fa-redo-alt"></i></button>
            {{ form_end(generateForm) }}
        </div>
		<div class="col-4">
            {{ form_start(accountForm) }}
            {{ form_widget(accountForm) }}
            <input type="hidden" name="svg" value="{{ svg|escape('html_attr') }}">
            <button class="btn btn-primary" type="submit">Valider</button>
            {{ form_end(accountForm) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="module" src="{{ asset('js/signup.js') }}"></script>
{% endblock %}
