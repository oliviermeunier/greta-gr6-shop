{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Créez votre compte {% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center mt-3">    
        <div class="col-8">
            <h2 class="mt-3">Créez votre compte</h2>
        </div>
    </div>
    <div class="row d-flex justify-content-center mt-3">
        <div class="col-4">
            {{ svg|raw }}
        </div>
		<div class="col-4">
            {{ form_start(accountForm) }}
            {{ form_widget(accountForm) }}
            <input type="hidden" name="svg" value="{{ svg|escape('html_attr') }}">
            <button class="btn btn-primary" type="submit">Valider</button>
            {{ form_end(accountForm) }}
        </div>
    </div>

{% endblock %}
